		</a>

		<hr/>

		<h3>Major Requirements</h3>
		<h6>Select Major</h6>
		

		<select class="form-control", id="majorfield">
			<option value ="0" selected='sel'>-- Select Major --</option>
			{{#each data.majors}}
				<option value="{{this}}">{{this}}</option>
			{{/each}}
		</select>
		<h6 id="trackTitle">Select Concentration</h6>
		<select class="form-control", id="trackfield">
			<option value ="0" selected='sel'>-- Select Track --</option>
			{{#each data.tracks}}
				<option value="track">{{this}}</option>
			{{/each}}
		</select>
		<a type="button" class="btn btn-primary" id="majorButton" action="assign_major_and_track">		

