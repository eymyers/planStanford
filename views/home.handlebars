		<!-- <h3>University Requirements</h3> -->
		<label for="trackfield">Select Class Year</label>
		<form id="class_year_page" action='class_major_track' role="form">
			<select class="form-control" id="classfield" name="classfield">
				<option value ="0" selected='sel'>-- Select Class Year --</option>
			    <option value="2014">2014</option>
			    <option value="2015">2015</option>
			    <option value="2016">2016</option>
			    <option value="2017">2017</option>    
			</select>

			<label for="programfield">Select Program Sheet Year
			<a href="">(learn more)</a></label>
			<select class="form-control" id="programfield" name="programyear">
				<option value ="0" selected='sel'>-- Select Program Year --</option>
			    <option value="2014">2014</option>
			    <option value="2015">2015</option>
			    <option value="2016">2016</option>
			    <option value="2017">2017</option>    
			</select>

			<!-- <h3>Major Requirements</h3> -->
			<label for="majorfield">Select Major</label>
			<select disabled class="form-control", id="majorfield" name="majorfield">
				<option value ="0" selected='sel'>-- Select Major --</option>
				{{#each data.majors}}
					<option value="{{this}}">{{this}}</option>
				{{/each}}
			</select>
			<label for="trackfield">Select Concentration</label>
			<select disabled class="form-control", id="trackfield" name="trackfield">
				<option value ="0" selected='sel'>-- Select Track --</option>
				{{#each data.tracks}}
					<option value="track">{{this}}</option>
				{{/each}}
			</select>
			<h4>Choose where to begin!</h4>
			<button disabled type="submit" id="classButton" class="btn btn-primary">University Requirements</button>
			<button disabled type="submit" id="majorButton" class="btn btn-primary">Major Requirements</button>
		</form>

