<!doctype html>

<html>
<head>
	<title>HCI Project Portfolio</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/requirements.css" rel="stylesheet">
	<link href="/css/jumbotron.css" rel="stylesheet">
	<link href="/css/icon_positioning.css" rel="stylesheet">

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	<!-- this is a comment in HTML -->

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->        
</head>

<body>

	{{>navbar}}

    
	<div class="container">
		<div class="jumbotron">
			<h1 class ="center-class">{{name}} Requirements</h1>
		</div>
	</div>
	
	{{#if classes}}
	<div>
	  <h2>Current Classes Selected</h2>
	  <p>
	    {{#each classes}}
	    {{this}}
	    {{/each}}
	  </p>
	{{/if}}

	<div class ="center-class">
		{{#each requirements}}
		<a href = "{{../name}}/{{this.name}}">
		<button type="button" class="btn btn-default btn-lg fixedWidth">
			{{this.name}}
		</button>
		</a>
		<br>
		{{/each}}
	</div>

	<div>
	<a  href="/home" >
    	<button type="button" class="btn btn-info btn-sm bottom">
      	Home
    	</button>
  	</a>
  	
	<a href="../summary">
	    <button type="button" class="btn btn-success btn-sm bottom_right">
	      Summary
	    </button>
	</a>
  </div>


</body>
</html>
